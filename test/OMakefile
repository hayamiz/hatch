# test/OMakefile
.PHONY: all clean check

USE_OCAMLFIND = true

OCAMLINCLUDES += ../src

FILES[] =
	testutil
	testmain
	test_parserutil
	test_lexer
	test_parser
	test_normal
	test_alpha
	test_beta
	test_constfold
	test_lambda
	test_highlevel
	test_hvalue

OCAMLPACKS[] =
	oUnit

PROGRAM = testrun

OCAML_LIBS += ../src/libhatch
OCAML_OTHER_LIBS += str

clean:
	rm -f *~ *.opt *.cmi *.cmx *.o *.omc *.cma *.cmxa $(PROGRAM)

OCamlProgram($(PROGRAM), $(FILES))

check : $(PROGRAM) ../src/hatch
	./$(PROGRAM)

.DEFAULT: $(PROGRAM) check

#
# ref. http://d.hatena.ne.jp/mzp/20100709/ocaml
#